{
    "editor.rulers": [
        80,
        100
    ],
    "editor.detectIndentation": false,
    "files.insertFinalNewline": true,
    "files.associations": {
        "Makefile.*": "makefile",
        "*.mk": "makefile",
        "*.sketch": "cpp",
        "cstdint": "c",
        "netdev.h": "c",
        "sx126x.h": "c",
        "ws2812_spi.h": "c",
        "sx126x_netdev.h": "c",
        "gpio.h": "c",
        "sx126x_params.h": "c",
        "spi.h": "c",
        "ztimer.h": "c",
        "descriptor.h": "c"
    },
    "[shellscript][c][cpp]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
    },
    "[makefile]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
}
